<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Account">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            android:layout_margin="25dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/myphoto"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mohamed_elesely"
                android:fontFamily="@font/girloybold"
                android:textAppearance="@style/mohamed_elesely"
                android:layout_marginTop="50dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mohamedelsely56_gmail_com"
                android:fontFamily="@font/gir"
                android:textAppearance="@style/account"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="129dp"
        android:layout_marginBottom="81dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="460dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyler_account_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <Button
                   android:id="@+id/log_out_btn"
                   android:background="@drawable/log_out_btn"
                   android:textAllCaps="false"
                   android:text="Log out"
                   android:layout_width="347dp"
                   android:layout_height="63dp"
                   android:textSize="18sp"
                   android:textColor="#53B175"
                   android:drawableStart="@drawable/logoutvector"
                   android:gravity="center"
                   android:paddingStart="20dp"
                   android:layout_marginLeft="25dp"
                   />

           </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-1dp"
        android:background="@drawable/test"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/store_account_activity"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/shop_account_screen" />

        <ImageView
            android:id="@+id/explore_account_activity"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/explore" />

        <ImageView
            android:id="@+id/mycart_account_activity"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/cart" />

        <ImageView
            android:id="@+id/fav_account_activity"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/fav" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/account_account_screen" />

    </LinearLayout>
</RelativeLayout>
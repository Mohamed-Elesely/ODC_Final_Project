<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/product_image_cart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/pepper"/>

        <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_width="260dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/product_name_cart"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/girloybold"
                android:textSize="16dp"
                android:textColor="#181725"
                android:textColorHint="#181725"
                android:hint="Bell Pepper Red"/>

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/delete_icon"
                android:layout_alignParentEnd="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationY="130dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/minus_minus"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="7dp"
                    android:layout_height="18dp"
                    android:text="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/gire"
                    android:textSize="16dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/add_add"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <TextView
                android:id="@+id/product_price_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:translationY="140dp"
                android:hint="$4.99"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/girse"
                android:textSize="18dp" />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/seprator"/>


</LinearLayout>